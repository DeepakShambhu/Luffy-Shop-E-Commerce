  <!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" , initial-scale="0" />
    <title>Luffy Shop</title>
    @*@Styles.Render("~/Content/css")
        @Styles.Render("~/css_html/css")*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link href="~/index.css" rel="stylesheet" />

</head>
<body>

    <div class="navbar navbar-inverse">
        <div >
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li> <a style="font-family:'Javanese Text'; font-size:xx-large">Luffy Shop</a></li>
                </ul>
                <ul class="nav navbar-nav" style="float:right !important">
                    <li><img src="https://projectstorage444.blob.core.windows.net/image/LOGO.png" style="width:75px; height:75px; border-radius:40px;" /></li>
                </ul>
            </div>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span>Home</a></li>
                <li><a href="@Url.Action("Product", "Home")"><span class="glyphicon glyphicon-th-list"></span>Product</a></li>
                <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-book"></span>About</a></li>

            </ul>
            <ul class="nav navbar-nav" style="float:right !important">
                <li><a href="@Url.Action("Login", "Customer")" ><span class="glyphicon glyphicon-log-in"></span>Sign In</a></li>
                <li><a href="@Url.Action("Login", "Admin")"><span class="glyphicon glyphicon-user"></span>Admin</a></li>
                <li><a href="@Url.Action("Login", "Home")"><span class="glyphicon glyphicon-gift"></span>Orders</a></li>
            </ul>  
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Luffy-Shop</p>
        </footer>
    </div>

    
</body>
</html>
